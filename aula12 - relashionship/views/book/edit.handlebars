<h1>Editando Livro</h1>


<div class="back_view">
  <form action="/book/edit" method="post" class="row m-3">

    <div class="row align-items-start">
      <div class="col-md-6">
        <input type="hidden" name="id" value="{{book.id}}" />
        <label for="nome" class="form-label">Nome:</label>
        <input type="text" name="nome" class="form-control" value="{{book.nome}}" />
      </div>

    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="autor" class="form-label">Autor:</label>
        <input type="text" name="autor" class="form-control" value="{{book.autor}}" />
      </div>
    </div>
    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="edicao" class="form-label">Edição:</label>
        <input type="text" name="edicao" class="form-control" value="{{book.edicao}}" />
      </div>
    </div>
    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="" class="form-label">Proprietário:</label>
        <select class="form-select" aria-label="Default select example" name="userId">
          <option selected>Selecione</option>
          {{#each users}}
            <option value="{{this.id}}">{{this.nome}}</option>

          {{/each}}
        </select>
      </div>
    </div>


    <div class="col-sm-2">
      <input type="submit" value="Atualizar" />
    </div>


</div>
